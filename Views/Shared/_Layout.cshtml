<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>ThreadsASP - @ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" 
          integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css" />
    <link href="/css/style.css" rel="stylesheet" />
</head>

<body>
    <div class="sidebar" id="SideBarPartial"></div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="searchbar" id="SearchBarPartial"></div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/jscript">
        $(document).ready(function () {
            $("#SideBarPartial").load('/Home/SideBarPartial');
        });

        $(document).ready(function () {
            $("#SearchBarPartial").load('/Home/SearchBarPartial');
        });
    </script>

    <script>
        function followUser(e) {

            e.stopPropagation();
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: "/UserProfile/Follow",
                data: { "selectedUserId": $("#selectedUserId").val() },
                success: function () {
                    location.reload();
                }
            });
        };

        function unfollowUser(e) {
            e.stopPropagation();
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: "/UserProfile/UnFollow",
                data: { "selectedUserId": $("#selectedUserId").val() },
                success: function () {
                    location.reload();
                }
            });
        }
    </script>

</body>
</html>
