@model List<ApplicationUser>

<style>
    #rcorners2 {
        border-radius: 25px;
        background: #191970;
        padding: 20px;
    }
</style>

@if (Model.Count != 0)
{
    <div id="rcorners2">
        <h5 style="border-radius: 10px; padding: 5px"
            class="bg-primary text-white text-center p-2">
            Find more people
        </h5>
        @foreach (var f in Model ?? Enumerable.Empty<ApplicationUser>())
        {
            <div style="text-align:left;" class="m-2">
                <a class="btn" href="/@f.UserName">
                    <img class="d-inline" src="/images/@f.ProfileImgName"
                         style="overflow:hidden; border-radius:50%; max-height:50px; max-width:50px; height:50px; width:50px;" />
                </a>
                <a class="btn d-inline" href="/@f.UserName"><strong style="color:white">@f.UserName</strong></a>
            </div>
        }
    </div>
}
