@model Post


<div class="container">
    <div class="left">
        <partial name="_ToolsPartial" model="@Model.UserName"/>
    </div>
    <div class="middle">
        <h1>Create Post</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <input type="hidden" asp-for="UserName"/>
            <div class="form-group">
                <textarea style="max-height:200px; height:150px; background-color:black; color:white"
                          type="text" asp-for="Text" class="form-control" placeholder="Type some text!">
                </textarea>
            </div>
            <button class="btn btn-primary mt-2" type="submit">Post</button>
        </form>
    </div>
    <div class="right">
        <partial name="_FollowingPartial" />
    </div>
</div>