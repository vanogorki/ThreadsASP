

<div style="background-color: dimgray" class="card">
    <div class="card-header">Crop Image</div>
    <div class="card-body">
        <div id="cropper1"></div>
        <input type="file" name="file" id="BrowseFile" class="form-control" value="Choose Image" accept="image/*" />
        <button onclick="redirect()" id="btnupload" style="margin-top: 10px" name="btnupload" class="btn btn-success">Crop</button>
    </div>
</div>

@section scripts {
    <script type="text/javascript">

        var basic = $('#cropper1').croppie(
            {
                viewport: { width: 300, height: 300, type: 'circle' },
                boundary: { width: 500, height: 500 },
                showZoomer: true,
                url: '/images/preview.jpg',
                format: 'png'
            }
        );

        function readFile(input) {
            if (input.files && input.files[0]) {

                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#cropper1').croppie('bind', {
                        url: e.target.result
                    });
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $('#BrowseFile').on('change', function () { readFile(this); });

        $('#btnupload').on('click', function () {
            basic.croppie('result', 'blob').then(function (blob) {

                var formData = new FormData();

                formData.append('blob', blob);
                var myAppUrlSettings = {
                    MyUsefulUrl: '@Url.Action("SetProfilePicture", "UserProfile")'
                }

                var request = new XMLHttpRequest();
                request.open('POST', myAppUrlSettings.MyUsefulUrl);
                request.send(formData);
                request.onreadystatechange = function () {
                    if (this.readyState === XMLHttpRequest.DONE && this.status === 200) {
                        
                        var response = JSON.parse(request.responseText);

                        window.location.replace(response.message);
                    }
                }
            })
        })
    </script>
}